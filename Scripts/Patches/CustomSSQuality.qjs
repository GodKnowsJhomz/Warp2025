///
/// \brief Modify the JPEG_CORE_PROPERTIES structure assignment inside CRenderer::SaveJPG function to set jquality member to user specified value
///
CustomSSQuality = function(_)
{
	function findPair(){
		let a = Exe.FindHex( MOV([EBP, WCn], 3) + MOV([EBP, WCn], 2) );
		if (a >= 0) return { addr:a, base:EBP };

		a = Exe.FindHex( MOV([ESP, WCp], 3) + MOV([ESP, WCp], 2) );
		if (a >= 0) return { addr:a, base:ESP };

		return null;
	}

	let q = Exe.GetUserInput('$ssQuality', D_Int8,
		"Screenshot Quality", "Enter JPEG quality (0â€“100)", 85, {min:0, max:100});
	if (q === false) return false;

	if (Exe.BuildDate < 20241200)
	{
		const hit = findPair();
		if (!hit) throw Error("Legacy mode: DIBChannels/DIBColor pattern not found");

		const dibDisp = Instr.FromAddr(hit.addr).Disp;
		const jqDisp  = dibDisp + 0x3C;

		const code = MOV([hit.base, jqDisp], q);
		Exe.SetHex(hit.addr, code);

		return true;
	}

	else
	{
		const hit = findPair();
		if (!hit){

			return true;
		}

		const dibDisp = Instr.FromAddr(hit.addr).Disp;
		const jqDisp  = dibDisp + 0x3C;

		const code = MOV([hit.base, jqDisp], q);
		Exe.SetHex(hit.addr, code);

		return true;
	}
};